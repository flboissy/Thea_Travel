<?xml version="1.0" encoding="UTF-8"?>
<ViewCell  xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="Thea_Travel.View.CustomView.CellViewProgrammeAppartement" x:Name="root" Appearing="root_Appearing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2"/>
            <RowDefinition/>
            <RowDefinition Height="2"/>
            <RowDefinition/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Label  Grid.Column="0" Grid.Row="0" Text="{Binding ProgrammeType}" HorizontalTextAlignment="Center"/>
        <BoxView Grid.Column="0" Grid.Row="1" BackgroundColor="Gray"/>
        <Label Grid.Column="0" Grid.Row="2" Text="{Binding Model.Nom, StringFormat='Nom: {0}'}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
        <BoxView Grid.Column="0" Grid.Row="3" BackgroundColor="Gray"/>
        <Label x:Name="labelAdresse" Grid.Column="0" Grid.Row="4" Text="{Binding Model.Adresse}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <BoxView Grid.Column="0" Grid.Row="5" BackgroundColor="Black"/>
    </Grid>
</ViewCell>
